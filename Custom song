live_loop :bass do
  24.times do
    use_synth :sine
    play :c2
    sleep 1
  end
  stop
end

sleep 4

live_loop :melody do
  20.times do
    use_synth :piano
    play :e4
    sleep 0.5
    play :g4
    sleep 0.5
    play :b4
    sleep 0.5
  end
  stop
end

sleep 8

live_loop :drums do
  24.times do
    sample :drum_bass_hard
    sleep 0.5
    sample :drum_snare_hard
    sleep 0.5
  end
  stop
end

# Fade out
with_fx :level, amp: 1 do |fx|
  control fx, amp: 0, amp_slide: 60
end
