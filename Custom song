live_loop :bass do
  use_synth :sine
  play :c2
  sleep 1
end

sleep 3
live_loop :melody, sync: :bass do
  
  use_synth :piano
  play :e4
  sleep 0.5
  play :g4
  sleep 0.5
  play :b4
  sleep 0.5
end


sleep 8
live_loop :drums, sync: :bass do
  sample :drum_bass_hard
  sleep 0.5
  sample :drum_snare_hard
  sleep 0.5
end

